pipeline {
  agent any
  stages {
    stage('Run ceph-dev-pipeline') {
      steps {
        script {
          def stepsImpl = load 'ceph-dev-pipeline/build/steps.groovy'
          stepsImpl.run([
            ceph_build_repo   : "https://github.com/ceph/ceph-build",
            base_node_label   : "gigantic",
            ceph_build_branch : (params?.CEPH_BUILD_BRANCH ?: env.CEPH_BUILD_BRANCH ?: 'main'),
          ])
        }
      }
    }
  }
}
