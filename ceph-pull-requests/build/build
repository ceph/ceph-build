#!/bin/bash -ex

docs_pr_only
container_pr_only
if [[ "$DOCS_ONLY" = true || "$CONTAINER_ONLY" = true ]]; then
    echo "Only the doc/ or container/ dir changed.  No need to run make check."
    exit 0
fi

export NPROC=$(nproc)
export WITH_CRIMSON=true
export WITH_RBD_RWL=true
# exclude run-rbd-unit-tests* for non-rbd pull requests
if ! pr_matches_codeowner "@ceph/rbd"; then
    echo "No rbd files changed. No need to run rbd unit tests."
    export CHECK_MAKEOPTS="-E run-rbd-unit-tests"
fi
timeout 3h ./run-make-check.sh
sleep 5
ps -ef | grep -v jnlp | grep ceph || true
